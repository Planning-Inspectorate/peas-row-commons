{%- from "govuk/components/button/macro.njk" import govukButton -%}
{%- from "govuk/components/character-count/macro.njk" import govukCharacterCount -%}

{%- macro caseNotes(params) -%}
	<form method="POST" novalidate="novalidate" action="{{ params.currentUrl }}/case-note">
		<div class="govuk-grid-row">
			<div class="govuk-grid-column-two-thirds">
				{{ govukCharacterCount({
					name: "comment",
					id: "comment",
					maxlength: params.characterLimit if params.characterLimit else 500,
					rows: 5,
					value: params.sessionComment
				})}}
			</div>
		</div>
		{{ govukButton({
			text: "Add case note",
			type: "submit",
			classes: "govuk-button--secondary govuk-!-margin-bottom-1",
			preventDoubleClick: true
		})}}
	</form>
	<div>
		<hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">
		{%- for caseNote in params.notes -%}
			<section>
				<p class="govuk-body govuk-!-margin-bottom-1 govuk-!-text-break-word">
					{{caseNote.commentText | safe}}
				</p>
				<p class="govuk-hint govuk-!-margin-bottom-6">
					{{ [caseNote.time, ' on ', caseNote.dayOfWeek, ' ', caseNote.date, ' by ', caseNote.userName] | join }}
				</p>
				<hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">
			</section>
		{%- endfor -%}
	</div>
{%- endmacro -%}
